{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}